rules_version = '2';

// Firebase Storage Security Rules for ABA Mastery
// A product of Bradley Virtual Solutions, LLC

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidImageSize() {
      return request.resource.size < 5 * 1024 * 1024; // 5MB max
    }
    
    // User profile images
    match /users/{userId}/profile/{imageId} {
      allow read: if true; // Public read
      allow write: if isOwner(userId) 
                   && isValidImageType() 
                   && isValidImageSize();
      allow delete: if isOwner(userId);
    }
    
    // User uploaded study materials
    match /users/{userId}/uploads/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) 
                   && request.resource.size < 10 * 1024 * 1024; // 10MB max
      allow delete: if isOwner(userId);
    }
    
    // Public content images (admin only via console)
    match /content/images/{imageId} {
      allow read: if true;
      allow write: if false; // Admin only via Firebase Console
    }
    
    // Category icons
    match /categories/icons/{iconId} {
      allow read: if true;
      allow write: if false; // Admin only
    }
    
    // App assets
    match /assets/{fileName} {
      allow read: if true;
      allow write: if false; // Admin only
    }
    
    // Study Group Files - PREMIUM FEATURE
    match /studyGroups/{groupId}/files/{fileId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
                   && request.resource.size < 10 * 1024 * 1024; // 10MB max
      allow delete: if isAuthenticated();
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

